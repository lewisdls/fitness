generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id        Int     @id @default(autoincrement())
  title     String
  duration  Int
  image     String
  createdAt DateTime @default(now())
}

model Instructor {
  id        Int       @id @default(autoincrement())
  name      String
  role      String
  image     String?
  createdAt DateTime  @default(now())
}

model Member {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String
  plan      Plan @relation(fields: [planId], references: [id])
  planId    Int
}

model Plan {
  id        Int       @id @default(autoincrement())
  title     String
  price     Int
  features  String[]
  members   Member[]
}

model Product {
  id        Int       @id @default(autoincrement())
  title     String
  price     Decimal
  image     String
  createdAt DateTime  @default(now())
}